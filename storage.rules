rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // TeachAI document storage rules
    match /TeachAI/{allPaths=**} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      
      // Allow write access for uploads
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024  // 50MB max file size
        && request.resource.contentType.matches('application/pdf|application/msword|application/vnd.*|text/.*|image/.*');
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
