rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // TeachAI document storage rules
    match /TeachAI/{allPaths=**} {
      // Allow PUBLIC read access to all files (no authentication required)
      allow read: if true;
      
      // Allow write access for uploads (backend only via Admin SDK)
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024  // 50MB max file size
        && request.resource.contentType.matches('application/pdf|application/msword|application/vnd.*|text/.*|image/.*');
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
